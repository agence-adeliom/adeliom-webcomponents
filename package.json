{
  "name": "@agence-adeliom/awc",
  "description": "A forward-thinking library of web components.",
  "version": "1.0.0",
  "homepage": "https://github.com/agence-adeliom/awc",
  "author": "Agence Adeliom",
  "license": "MIT",
  "customElements": "dist/custom-elements.json",
  "web-types": "dist/web-types.json",
  "type": "module",
  "types": "dist/awc.d.ts",
  "exports": {
    ".": {
      "types": "./dist/awc.d.ts",
      "import": "./dist/awc.js"
    },
    "./dist/custom-elements.json": "./dist/custom-elements.json",
    "./dist/themes/*": "./dist/themes/*",
    "./dist/components/*": "./dist/components/*",
    "./dist/utilities/*": "./dist/utilities/*",
    "./dist/react": "./dist/react/index.js",
    "./dist/react/*": "./dist/react/*",
    "./dist/translations/*": "./dist/translations/*",
    "./dist/tailwind/preset.js": "./dist/tailwind/preset.js"
  },
  "files": [
    "dist",
    "cdn"
  ],
  "keywords": [
    "web components",
    "custom elements",
    "components"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/agence-adeliom/awc.git"
  },
  "bugs": {
    "url": "https://github.com/agence-adeliom/awc/issues"
  },
  "scripts": {
    "create": "plop --plopfile scripts/plop/plopfile.js",
    "start": "node scripts/build.js --serve",
    "build": "node scripts/build.js",
    "esbuild": "npm run hook:pre:build && node esbuild.config.mjs",
    "esbuild:watch": "npm run esbuild -- --watch",
    "verify": "npm run prettier:check && npm run lint:check",
    "fix": "npm run prettier:fix && npm run lint:fix",
    "prettier:check": "prettier --check --loglevel warn .",
    "prettier:fix": "prettier --write --loglevel warn .",
    "lint:check": "eslint src --max-warnings 0",
    "lint:fix": "eslint src --max-warnings 0 --fix",
    "test": "web-test-runner --group default",
    "test:watch": "web-test-runner -- --watch --group default",
    "test:component": "web-test-runner -- --watch --group",
    "spell:check": "cspell \"**/*.{js,ts,json,html,css,md}\" --no-progress",
    "ts:check": "tsc --noEmit --project ./tsconfig.json",
    "ts:build": "tsc --project ./tsconfig.prod.json --outdir dist",
    "dependencies:list": "npm-check-updates --format repo --peer",
    "dependencies:update": "npm-check-updates --peer -u && npm install",
    "make:metadata": "node scripts/make-metadata.js --outdir dist && node scripts/make-metadata.js --outdir cdn",
    "make:web-types": "node scripts/make-web-types.js --outdir dist && node scripts/make-web-types.js --outdir cdn",
    "make:themes": "node scripts/make-themes.js --outdir dist && node scripts/make-themes.js --outdir cdn",
    "make:icons": "node scripts/make-icons.js --outdir dist",
    "make:react": "node scripts/make-react.js --outdir dist",
    "doc:build": "eleventy --config=eleventy.config.cjs",
    "doc:watch": "npm run doc:build -- --watch --incremental",
    "doc:serve": "npm run doc:build -- --serve",
    "tailwindcss:build": "tailwindcss -i docs/assets/styles/tailwind.css -o docs/assets/styles/tailwind.min.css --postcss",
    "tailwindcss:watch": "npm run tailwindcss:build -- --watch",
    "prepare": "husky install",
    "prepublishOnly": "npm run verify && npm run build"
  },
  "engines": {
    "node": ">=14.17.0"
  },
  "dependencies": {
    "@ctrl/tinycolor": "^3.6.0",
    "@extractus/oembed-extractor": "^4.0.0",
    "@floating-ui/dom": "^1.4.4",
    "@lit-labs/react": "^1.2.1",
    "@shoelace-style/animations": "^1.1.0",
    "@shoelace-style/localize": "^3.1.1",
    "composed-offset-position": "^0.0.4",
    "lit": "^2.7.6",
    "qr-creator": "^1.0.0",
    "unpic": "^3.8.1",
    "lodash.castarray": "^4.4.0",
    "lodash.isplainobject": "^4.0.6"
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@custom-elements-manifest/analyzer": "^0.8.3",
    "@open-wc/testing": "^3.2.0",
    "@types/mocha": "^10.0.1",
    "@types/react": "^18.2.14",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.61.0",
    "@web/dev-server-esbuild": "^0.4.1",
    "@web/test-runner": "^0.16.1",
    "@web/test-runner-commands": "^0.7.0",
    "@web/test-runner-playwright": "^0.10.1",
    "bootstrap-icons": "^1.10.5",
    "browser-sync": "^2.29.3",
    "cem-plugin-vs-code-custom-data-generator": "^1.4.1",
    "chalk": "^5.3.0",
    "change-case": "^4.1.2",
    "command-line-args": "^5.2.1",
    "comment-parser": "^1.3.1",
    "concurrently": "^8.2.0",
    "cspell": "^6.31.1",
    "del": "^7.0.0",
    "download": "^8.0.0",
    "esbuild": "^0.18.11",
    "eslint": "^8.44.0",
    "eslint-plugin-chai-expect": "^3.0.0",
    "eslint-plugin-chai-friendly": "^0.7.2",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-lit": "^1.8.3",
    "eslint-plugin-lit-a11y": "^4.0.0",
    "eslint-plugin-markdown": "^3.0.0",
    "eslint-plugin-sort-imports-es6-autofix": "^0.6.0",
    "eslint-plugin-wc": "^1.5.0",
    "front-matter": "^4.0.2",
    "get-port": "^7.0.0",
    "globby": "^13.2.2",
    "husky": "^8.0.3",
    "jsdom": "^22.1.0",
    "jsonata": "^2.0.3",
    "lint-staged": "^13.2.3",
    "lunr": "^2.3.9",
    "markdown-it-container": "^3.0.0",
    "markdown-it-ins": "^3.0.1",
    "markdown-it-kbd": "^2.2.2",
    "markdown-it-mark": "^3.0.1",
    "markdown-it-replace-it": "^1.0.0",
    "npm-check-updates": "^16.10.15",
    "ora": "^6.3.1",
    "pascal-case": "^3.1.2",
    "plop": "^3.1.2",
    "postcss-import": "^15.1.0",
    "postcss-nested": "^6.0.1",
    "prettier": "^3.0.0",
    "prismjs": "^1.29.0",
    "react": "^18.2.0",
    "recursive-copy": "^2.0.14",
    "sinon": "^15.2.0",
    "smartquotes": "^2.3.2",
    "source-map": "^0.7.4",
    "strip-css-comments": "^5.0.0",
    "tailwindcss": "^3.3.2",
    "tslib": "^2.6.0",
    "typescript": "^5.1.6",
    "user-agent-data-types": "^0.3.1"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --max-warnings 0 --cache --fix",
      "prettier --write"
    ]
  }
}
